@model ClientPortalWeb.Models.AddClientViewModel2

<h1>Add Contacts</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Client Id</label>
        <input type="text" class="form-control" asp-for="ClientId" />
    </div>

    <div class="mt-3">
        <label class="form-label">Full Name</label>
        <input type="text" class="form-control" asp-for="FullName" />
    </div>
    
    <div class="mt-3">
    <label class="form-label">Email Address</label>
    <input type="text" class="form-control" asp-for="EmailAddress" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="submit" class="btn btn-danger">Delete</button>
    </div>

</form>