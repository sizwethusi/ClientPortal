@{
    ViewData["Title"] = "Edit Client";
}

@model List<ClientPortalWeb.Models.Entities.Client>

<form method="post">

          @foreach (var client in Model)
        {

    <div class="mt-3">
        <label class="form-label">ClientId</label>
        <input type="text" class="form-control" asp-for="@client.ClientId" readonly />
    </div>

    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="@client.Name" />
    </div>

    <div class="mt-3">
        <label class="form-label">Client Code</label>
        <input type="text" class="form-control" asp-for="@client.Client_code" readonly />
    </div>

    <div class="mt-3">
        <label class="form-label">No of Linked Contacts</label>
        <input type="text" class="form-control" asp-for="@client.No_of_linked_contacts" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>

        <button type="submit" class="btn btn-danger ms-3"
                asp-action="Delete"
                asp-controller="Clients">
            Delete
        </button>

    </div>
        }

</form>
